<h1>Actor <%= @actor.id%> details</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @actor.id %>" class="btn btn-block btn-outline-secondary">
  Delete actor
  <small>(Building this link is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%=@actor.name%>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%=@actor.dob%>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%=@actor.bio%>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%=@actor.image%>" style="width:250px;">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%=time_ago_in_words(@actor.created_at)%> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%=time_ago_in_words(@actor.updated_at)%> ago
  </dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">

  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Character name
    </th>

    <th>
    </th>
  </tr>

<%@filmography.each do |character|%>

<tr>
  <td>
    <%movie = Movie.where({ :id => character.movie_id}).at(0)%>
    <%=movie.title%>
  </td>

  <td>
    <%movie = Movie.where({ :id => character.movie_id}).at(0)%>
    <%=movie.year%>
  </td>

  <td>
    <%movie = Movie.where({ :id => character.movie_id}).at(0)%>
    <%director = Director.where({ :id => movie.director_id}).at(0)%>
    <%=director.name%>
  </td>
    
  <td>
    <%=character.name%>
  </td>

  <td>
    <%movie = Movie.where({ :id => character.movie_id}).at(0)%>
    <a href="/movies/<%=movie.id%>"> Show details </a>
  </td>  

</tr>
  <%end%>

</table>
